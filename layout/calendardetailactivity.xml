<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calendaractivity_parentbar"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <include
        android:id="@+id/calendaractivity_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/header"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/calendaractivity_header"
        android:layout_margin="10dip"
        android:background="@drawable/rounded_bg"
        android:orientation="vertical"
        android:padding="10dip">
        <ScrollView android:layout_width="fill_parent"
        	android:layout_height="200dip">
        <LinearLayout android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	 android:orientation="vertical">	
        <TextView
            android:id="@+id/event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dip"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/event_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:textSize="16dip"/>
        <TextView
            android:id="@+id/event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dip"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/event_notes_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:textSize="18dip"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/event_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:textSize="16dip"/>
        </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/eventrow_eventFacebook"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="5dip"
                android:background="@drawable/fb"
                android:textSize="10dp"/>
            <Button
                android:id="@+id/eventrow_eventTwitter"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="5dip"
                android:layout_marginLeft="3dp"
                android:background="@drawable/twitter"
                android:textSize="10dp"/>
            <Button
                android:id="@+id/eventrow_eventEmail"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="5dip"
                android:layout_marginLeft="3dp"
                android:background="@drawable/mail"
                android:textSize="10dp"/>
			<!-- <Button
                android:id="@+id/eventrow_eventLike"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="5dip"
                android:layout_marginLeft="3dp"
                android:background="@drawable/twitter"
                android:textSize="10dp"/>
            <Button
                android:id="@+id/eventrow_eventComment"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="5dip"
                android:layout_marginLeft="3dp"
                android:background="@drawable/fb"
                android:textSize="10dp"/>-->
       </LinearLayout>
    
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@drawable/likes_comment_background"
        android:layout_marginTop="20dip">
        <TextView android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/likes"
            android:layout_weight="1"
            android:textStyle="bold"
            android:id="@+id/txtLike"
            android:gravity="center"/>
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/small_circle"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/comments"
            android:layout_weight="1"
            android:textStyle="bold"
            android:id="@+id/txtComment"
            android:gravity="center"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/like_icn"
            android:layout_weight="1"
            android:id="@+id/txtLikeCounter"
            android:gravity="center"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/comment_icn"
            android:layout_weight="1"
            android:id="@+id/txtCommentCounter"
            android:gravity="center"/>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>